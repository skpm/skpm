{
  "name": "skpm",
  "version": "1.2.1",
  "description": "A utility to build, publish and install sketch plugins",
  "preferGlobal": true,
  "main": "lib/index.js",
  "bin": {
    "skpm": "lib/index.js"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "lib",
    "check.js"
  ],
  "scripts": {
    "prebuild": "../../node_modules/.bin/rimraf lib",
    "build": "../../node_modules/.bin/babel src -d lib -D",
    "watch": "npm run build -- --watch",
    "prepare": "npm run -s build",
    "postpublish": "echo '⚠️  do not forget to publish create-sketch-plugin as well'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skpm/skpm.git"
  },
  "keywords": [
    "sketch",
    "cocoascript",
    "javascript",
    "babel",
    "skpm"
  ],
  "author": "Mathieu Dutour <mathieu@dutour.me> (http://mathieu.dutour.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skpm/skpm/issues"
  },
  "homepage": "https://github.com/skpm/skpm#readme",
  "dependencies": {
    "@skpm/internal-utils": "^0.1.14",
    "chalk": "^2.4.2",
    "cross-spawn-promise": "^0.10.1",
    "fs.promised": "^3.0.0",
    "gittar": "^0.1.1",
    "globby": "^7.1.1",
    "inquirer": "^6.2.0",
    "is-ci": "^2.0.0",
    "jszip": "^3.2.1",
    "keychain": "^1.3.0",
    "log-symbols": "^2.2.0",
    "opn": "^5.4.0",
    "ora": "^1.4.0",
    "parse-author": "^2.0.0",
    "request": "^2.88.0",
    "update-notifier": "^2.5.0",
    "which": "^1.3.1",
    "xml2js": "^0.4.17",
    "yargs": "^13.2.2"
  }
}
